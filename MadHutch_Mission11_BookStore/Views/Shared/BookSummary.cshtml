@{
}

@model Book

<div class="card m-2 p-1">
    <h3 class="p-3">
        @Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end">$@Model.Price</span>
    </h3>
    <ul>
        <li><i>Author:</i> @Model.Author</li>
        <li><i>Publisher:</i> @Model.Publisher</li>
        <li><i>ISBN:</i> @Model.Isbn</li>
        <li><i>Classification:</i> @Model.Classification</li>
        <li><i>Category:</i> @Model.Category</li>
        <li><i>Number of Pages:</i> @Model.PageCount</li>
    </ul>
</div>