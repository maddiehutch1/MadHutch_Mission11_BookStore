<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MadHutch_Mission11_BookStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MadHutch_Mission11_BookStore.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="bg-dark text-white p-3">
        <span class="navbar-brand m-lg-2"><b>BOOKSTORE</b></span>
    </div>
    <div class="row m-1 p-1">
        <div class="align-items-center col-3">
            <img style="width: 200px" src="~/img/bookclipart.png" />
            <br />
            <br />
            Filter COMING SOON!
        </div>   
        @* Here is the key spot that places the code of index page here *@
        <div class="container col-9">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
